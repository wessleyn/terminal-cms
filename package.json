{
  "name": "terminal-portfolio",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "admin:dev": "turbo run dev --filter=admin",
    "web:dev": "turbo run dev --filter=web",
    "email:dev": "turbo run dev --filter=email",
    "admin:start": "turbo run start --filter=admin",
    "web:start": "turbo run start --filter=web",
    "email:start": "turbo run start --filter=email",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "prettier": "^3.5.3",
    "turbo": "^2.5.2",
    "typescript": "5.8.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@11.3.0",
  "workspaces": [
    "apps/*",
    "packages/*",
    "workers/*"
  ]
}