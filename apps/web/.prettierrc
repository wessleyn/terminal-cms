{
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "arrowParens": "always",
    "singleAttributePerLine": true,
    "jsxSingleQuote": false,
    "jsxBracketSameLine": false,
    "quoteProps": "as-needed",
    "overrides": [
        {
            "files": "*.ts,*.tsx",
            "options": {
                "importOrder": [
                    "^react$",
                    "^next",
                    "^@/",
                    "^[./]"
                ],
                "importOrderSeparation": true,
                "importOrderSortSpecifiers": true
            }
        }
    ]
}