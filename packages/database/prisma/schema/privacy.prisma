enum PrivacyType {
    FAQ
    BLOG
    TERMS
    PORTFOLIO
}

model Privacy{
    id        String   @id @default(uuid())
    type      PrivacyType @default(TERMS) @unique // use this for querying the privacy data of each part of the system
    descPhrase String // the desc
    sections PrivacySection[] 
    
    updatedAt DateTime @updatedAt // tracks the overall update of the its sections 
}

model PrivacySection {
    id        String   @id @default(uuid())
    privacyId String

    privacDoc Privacy @relation(fields: [privacyId], references: [id])
    title     String
    content   String   @db.Text
    order     Int      @default(0)
    
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

