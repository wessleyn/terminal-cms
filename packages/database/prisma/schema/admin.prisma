model PortfolioProfile {
    id        String   @id @default(cuid())
    tagline     String?
    description String?
    workEmail   String?
    
}

// Model for storing multiple profile images with version control
model PortfolioProfileImage {
    id        String   @id @default(cuid())
    url       String
    isCurrent Boolean  @default(false)
    userId    String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

// Model for storing social media links
model PortfolioSocial {
    id        String     @id @default(cuid())
    platform  PortfolioSocialType
    url       String
    userId    String
    createdAt DateTime   @default(now())
    updatedAt DateTime   @updatedAt
}

enum PortfolioSocialType {
    GITHUB
    LINKEDIN
    TWITTER
    INSTAGRAM
    FACEBOOK
    YOUTUBE
    OTHER
}
