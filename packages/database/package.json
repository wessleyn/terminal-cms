{
  "name": "@repo/db",
  "version": "0.0.0",
  "exports": {
    ".": "./src/index.ts",
    "./types": "./src/index.ts",
    "./generated/prisma": "./generated/prisma/index.js"
  },
  "prisma": {
    "schema": "./prisma",
    "seed": "tsx ./prisma/seed/seed.ts"
  },
  "scripts": {
    "dev": "prisma dev",
    "gen": "prisma generate",
    "gen:prod": "prisma generate --no-engine",
    "migrate": "prisma migrate dev --skip-generate",
    "deploy": "prisma migrate deploy",
    "prebuild": "npm run gen:prod",
    "predev": "npm run gen",
    "studio": "prisma studio",
    "push": "prisma db push",
    "forcePush": "prisma db push  --accept-data-loss",
    "seed": "npm run gen && npx prisma db seed",
    "reset": "prisma migrate reset --force",
    "postinstall": "prisma generate --no-engine"
  },
  "devDependencies": {
    "@types/node": "^22.15.2",
    "prisma": "^6.8.1",
    "tsx": "^4.19.3"
  },
  "dependencies": {
    "@prisma/client": "^6.8.1"
  }
}